<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CDDC39"
    android:backgroundTint="#93C2E6"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/kombinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="KOMBIN NO 1"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:backgroundTint="#72BAB4"
        android:orientation="vertical">

        <Button
            android:id="@+id/kombinSecme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:backgroundTint="#339E41"
            android:text="Seç"
            android:visibility="gone" />

        <Button
            android:id="@+id/kombingoruntule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="GÖRÜNTÜLE" />

        <Button
            android:id="@+id/kombinsil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:backgroundTint="#F84242"
            android:text="SİL" />
    </LinearLayout>

</LinearLayout>