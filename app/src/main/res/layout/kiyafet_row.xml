<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#00FFFFFF"
    android:orientation="vertical"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="#9CA4CD"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kiyafetFotoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/kiyafetTuruT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="TextView"
                android:textColor="#2C2C2C" />

            <TextView
                android:id="@+id/kiyafetRenkT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="TextView"
                android:textColor="#2C2C2C" />

            <TextView
                android:id="@+id/kiyafetDesenT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="TextView"
                android:textColor="#2C2C2C" />

            <TextView
                android:id="@+id/kiyafetTarhiT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="TextView"
                android:textColor="#2C2C2C" />

            <TextView
                android:id="@+id/kiyafetFiyatT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="TextView"
                android:textColor="#2C2C2C" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <Button
                android:id="@+id/kiyafetSec"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:backgroundTint="#52AC12"
                android:text="SEÇ"
                android:textColor="#D6D6D6"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/kiyafetSil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:backgroundTint="#BA3737"
                android:backgroundTintMode="src_over"
                android:text="Sil"
                android:textColor="#D6D6D6" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/kiyafetGuncelle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:backgroundTint="#DE65EC"
                android:text="Güncelle"
                android:textColor="#D6D6D6" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>